<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LIN.UI.Vistas.Proveedores.Index"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Custom="clr-namespace:LIN.CustomControls"
    Title="Index">
    <ScrollView>
        <VerticalStackLayout>

            <HorizontalStackLayout>
                <Label Text="Mis Contactos" />
                <Custom:Button
                    Clicked="Button_Clicked"
                    HeightRequest="40"
                    Picture="add.png"
                    WidthRequest="40" />
            </HorizontalStackLayout>




            <VerticalStackLayout
                x:Name="content"
                Padding="10"
                Spacing="3" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>